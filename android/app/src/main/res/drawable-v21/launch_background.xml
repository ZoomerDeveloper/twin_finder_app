<?xml version="1.0" encoding="utf-8"?>
<!-- Custom gradient launch background for Twin Finder with Material Design support -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#FF3F8E"
                android:endColor="#FF7A00" />
        </shape>
    </item>
    
    <!-- App icon/logo in center with elevation for Material Design -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher"
            android:elevation="8dp" />
    </item>
</layer-list>
